import random
import time
from datetime import datetime
from colorama import init, Fore, Style
import os

#Initialize colorama for colored output
init(autoreset=True)

# List of valid choices
choices = ["rock", "paper", "scissors"]

# Settings dictionary
settings = {
    'emojis': True,
    'countdown': True
}

# ASCII art representations
ascii_art = {
    "rock": "ğŸª¨ Rock\n   _______\n---'   ____)\n      (_____)\n      (_____)\n      (____)\n---.__(___)",
    "paper": "ğŸ“„ Paper\n   _______\n---'   ____)____\n          ______)\n          _______)\n         _______)\n---.__________)",
    "scissors": "âœ‚ï¸ Scissors\n   _______\n---'   ____)____\n          ______)\n       __________)\n      (____)\n---.__(___)"
}


# Game Logic Functions

def print_seperator():
    print(Fore.BLUE + "=" * 50)

def countdown():
    if settings ['countdown']:
        print(Fore.YELLOW + "Get Ready!")
        for i in range(3, 0, -1):
            print(Fore.YELLOW + f"{i}...")
            time.sleep(0.5)

def get_player_choice():
    while True:
        choice = input(Fore.CYAN + "ğŸ‘‰ Choose Rock, Paper, or Scissors: ").strip().lower()
        if choice in choices or choice == 'q':
            return choice
        else:
            print(Fore.RED + "âŒ Invalid input. Try again!")
        
            
        
def display_ascii(choice):
    if settings['emojis']:
        print(Fore.MAGENTA + ascii_art[choice])
    else:
        print(Fore.MAGENTA + choice.capitalize())    


def setting_menu():
    print_seperator()
    print(Fore.CYAN + "âš™ï¸ SETTING MENU")
    for key in settings:
        current = "ON" if settings[key] else 'OFF'
        choice = input(f"{key.capitalize()} ({current}) - Do you want to Toggle? (yes/no): ").strip().lower()
        if choice == 'yes':
            settings[key] = not settings[key]

def choose_opponent():
    print_seperator()
    print(Fore.CYAN + "ğŸ¤– Choose your opponent: ")
    print("1. Random Bot")
    print("2. Smart Bot (Coming soon!)")
    while True:
        choice2 = input ("Enter 1 or 2: ").strip()
        if choice2 == '1':
            return "random"
        elif choice2 == '2':
            print(Fore.YELLOW + "Smart Bot is under construction ğŸ—ï¸ Using Random Bot for now.")
            return "random"
        else:
            print(Fore.RED + "âŒ Invalid selection.")

def choose_game_mode():
    print_seperator()
    print(Fore.CYAN + "ğŸ® Choose Game Mode: ")
    print("1. Best of 3")
    print("2. Best of 5")
    print("3. Unlimited (press 'q' to quit anytime)")      
    while True:
        mode = input("Enter 1, 2 or 3: ").strip()
        if mode == '1':
            return 3
        elif mode == '2':
            return 5
        elif mode == '3':
            return -1 
        else:
            print(Fore.RED + "âŒ Invalid option.")   

def save_stats(name, wins, losses):
    with open("stats.txt", "a") as file:
        date = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
        file.write(f"{date}-{name} | Wins: {wins} | Losses: {losses}\n")  

def view_stats():
    print_seperator()
    if not os.path.exists("stats.txt"): 
        print(Fore.RED + "No game stats found.")   
    else:
        with open("stats.txt", "r") as file:  
            stats = file.readlines()
            if stats:
                print(Fore.GREEN + "Previous Game Stats: \n")
                for line in stats:
                    print(Fore.YELLOW + line.strip())
            else:
                print(Fore.RED + "No game stats recorded yet. ")               

# Main Game Logic   
def play_game(player_name):
    print_seperator() 
    name = input(Fore.CYAN + "What's your name, Player?: ").strip().title()

    opponent = choose_opponent()
    game_mode = choose_game_mode()

    user_wins = computer_wins = ties = total_rounds = 0
    round_number = 1

    print(Fore.YELLOW + f"\nğŸ® Welcome {name}! Let's start the game  ğŸ‘‘\n")

    while True:
        if game_mode != -1 and (user_wins >= game_mode or computer_wins >= game_mode):
            break

        print_seperator()
        print(Fore.CYAN + f"\nğŸ¯ Round {round_number}")
        countdown()

        user_choice = get_player_choice()
        if user_choice == 'q':
            break
        computer_choice = random.choice(choices)

        print("\nYou Chose:")
        display_ascii(user_choice)
        print("\nComputer Chose:")
        display_ascii(computer_choice)

        if user_choice == computer_choice:
            print(Fore.YELLOW + "ğŸ¤ it's a tie!")
            ties += 1
        elif(
            (user_choice == "rock" and computer_choice == "scissors") or
            (user_choice == "paper" and computer_choice == "rock") or
            (user_choice == "scissors" and computer_choice == "paper")
        ):
            print(Fore.GREEN + "âœ… You win this round!")  
            user_wins += 1
        else:
            print(Fore.RED + "ğŸ’» Computer wins this round!")
            computer_wins += 1

        round_number += 1
        total_rounds += 1

    print_seperator()
    print(Fore.CYAN + Style.BRIGHT + f"ğŸ“Š Game Over, {name}!")
    print(Fore.CYAN + f"Total Rounds: {total_rounds}")
    print(Fore.GREEN + f"Wins: {user_wins}")
    print(Fore.RED + f"Losses: {computer_wins}")
    print(Fore.YELLOW + f"Ties: {ties}")

    win_rate = (user_wins / total_rounds) * 100
    print(Fore.MAGENTA + f"ğŸ… Win Rate: {win_rate: .2f}%")
    
    save_stats(name, user_wins, computer_wins)

# Main Menu
def main_menu():
    player_name = input(Fore.CYAN + "ğŸ‘¤ Enter your name: ").strip().title()
    while True:
        print_seperator()
        print(Fore.GREEN + f"ğŸŒŸ Welcome, {player_name}!")
        print(Fore.CYAN + "ğŸ  MAIN MENU")
        print("1. Play Game")
        print("2. View Previous Scores")
        print("3. Settings")
        print("4. Exit")
        choice = input(Fore.CYAN + "Enter your choice (1-4): ").strip()

        if choice == '1':
            play_game(player_name)
        elif choice == '2':
            view_stats()
        elif choice == '3':
            setting_menu()
        elif choice == '4':
            print(Fore.MAGENTA + "ğŸ‘‹ Goodbye! Thanks for playing!")
            break
        else:
            print(Fore.RED + "âŒ Invalid option. Try again.")

# Run the Program
if __name__ == "__main__":
    main_menu()    

